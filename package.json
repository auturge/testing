{
    "name": "@auturge/testing",
    "version": "0.0.7",
    "description": "Auturge - the testing library",
    "main": "./bundles/testing.umd.js",
    "commonjs": "./common/index.js",
    "es6": "./es6/index.js",
    "types": "./testing.d.ts",
    "author": "auturge",
    "license": "MIT",
    "engines": {
        "node": ">=12.8.1",
        "yarn": ">=1.21.1",
        "npm": ">=6.10.2"
    },
    "files": [
        "commonjs/**",
        "es6/**",
        "readme.md",
        "testing.d.ts"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/auturge/testing.git"
    },
    "devDependencies": {
        "@types/chai": "4.2.11",
        "@types/mocha": "7.0.2",
        "@typescript-eslint/eslint-plugin": "3.2.0",
        "@typescript-eslint/parser": "3.2.0",
        "awesome-typescript-loader": "5.2.1",
        "chai": "4.2.0",
        "coveralls": "3.1.0",
        "eslint": "7.2.0",
        "eslint-config-prettier": "6.11.0",
        "gulp": "4.0.2",
        "is-valid-path": "0.1.1",
        "mocha": "7.2.0",
        "mocha-lcov-reporter": "1.3.0",
        "npm-run-all": "4.1.5",
        "nyc": "15.1.0",
        "puppeteer": "3.3.0",
        "shx": "0.3.2",
        "source-map": "0.7.3",
        "source-map-support": "0.5.19",
        "terser-webpack-plugin": "3.0.3",
        "tsconfig-paths": "3.9.0",
        "tsconfig-paths-webpack-plugin": "3.2.0",
        "ts-mocha": "7.0.0",
        "ts-node": "8.10.2",
        "typescript": "3.9.5",
        "webpack": "4.43.0",
        "webpack-cli": "3.3.11"
    },
    "scripts": {
        "build": "npm-run-all check-env clean build:testing",
        "build:testing": "npm-run-all build:testing:bundles build:testing:common build:testing:es6 copy:package:json:testing copy:readme:testing copy:typings:testing",
        "build:testing:bundles": "webpack --config ./webpack.config.js --display-error-details --progress",
        "build:testing:common": "tsc -p ./tsconfig.json -m commonjs --outdir ./dist/commonjs",
        "build:testing:es6": "tsc -p ./tsconfig.json -m es6 --outDir ./dist/es6",
        "check-env": "node ./scripts/check-env/check-environment.js",
        "clean": "shx rm -rf dist build",
        "copy:package:json:testing": "node ./scripts/copy-package-json/copy-trimmed-package-json.js ./package.json ./dist",
        "copy:readme:testing": "shx cp ./README.md ./dist",
        "copy:typings:testing": "shx cp ./src/testing.d.ts ./dist",
        "lint": "yarn eslint . --ext .ts,.tsx",
        "preinstall": "node ./scripts/yarn/check-yarn.js",
        "prepare": "npm-run-all build test",
        "prepublishOnly": "cd ./dist",
        "publish": "npm publish --access public",
        "postpublish": "git push origin --all; git push origin --tags",
        "test": "yarn test:clean && yarn test:run",
        "test:clean": "shx rm -rf coverage",
        "test:run": "nyc ts-mocha --paths -p ./tsconfig.json ./test/**/*.spec.ts",
        "test:report": "nyc report --reporter=text-lcov | coveralls"
    },
    "sideEffects": false
}
