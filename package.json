{
    "name": "@auturge/testing",
    "version": "0.0.7",
    "description": "Auturge - the testing library",
    "main": "./bundles/testing.umd.js",
    "commonjs": "./common/index.js",
    "es6": "./es6/index.js",
    "types": "./testing.d.ts",
    "author": "auturge",
    "license": "MIT",
    "engines": {
        "node": ">=12.8.1",
        "yarn": ">=1.21.1",
        "npm": ">=6.10.2"
    },
    "files": [
        "commonjs/**",
        "es6/**",
        "readme.md",
        "testing.d.ts"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/auturge/testing.git"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "0.1.3",
        "@types/jasmine": "3.4.0",
        "awesome-typescript-loader": "5.2.1",
        "coveralls": "3.0.7",
        "gulp": "4.0.2",
        "gulp-tslint": "8.1.4",
        "is-valid-path": "0.1.1",
        "jasmine": "3.4.0",
        "jasmine-core": "3.4.0",
        "karma": "4.2.0",
        "karma-chrome-launcher": "3.1.0",
        "karma-cli": "2.0.0",
        "karma-coverage": "2.0.1",
        "karma-coverage-istanbul-reporter": "2.1.0",
        "karma-jasmine": "2.0.1",
        "karma-jasmine-html-reporter": "1.4.2",
        "karma-sourcemap-loader": "0.3.7",
        "karma-spec-reporter": "0.0.32",
        "karma-summary-reporter": "1.7.1",
        "karma-typescript": "4.1.1",
        "npm-run-all": "4.1.5",
        "puppeteer": "2.0.0",
        "shx": "0.3.2",
        "source-map": "0.7.3",
        "source-map-support": "0.5.13",
        "terser-webpack-plugin": "2.1.2",
        "tsconfig-paths-webpack-plugin": "3.2.0",
        "ts-node": "8.4.1",
        "tslint": "5.19.0",
        "tslint-eslint-rules": "5.4.0",
        "typescript": "3.5.3",
        "webpack": "4.39.2",
        "webpack-cli": "3.3.10"
    },
    "scripts": {
        "build": "npm-run-all check-env clean build:testing",
        "build:testing": "npm-run-all build:testing:bundles build:testing:common build:testing:es6 copy:package:json:testing copy:readme:testing copy:typings:testing",
        "build:testing:bundles": "webpack --config ./conf/webpack.config.js --display-error-details --progress",
        "build:testing:common": "tsc -p ./src/tsconfig.json -m commonjs --outdir ./built/commonjs",
        "build:testing:es6": "tsc -p ./src/tsconfig.json -m es6 --outDir ./built/es6",
        "check-env": "node ./scripts/check-env/check-environment.js",
        "clean": "shx rm -rf built",
        "copy:package:json:testing": "node ./scripts/copy-package-json/copy-trimmed-package-json.js ./package.json ./built",
        "copy:readme:testing": "shx cp ./README.md ./built",
        "copy:typings:testing": "shx cp ./src/testing.d.ts ./built",
        "lint": "gulp --gulpfile ./scripts/gulp/gulpfile.js lint",
        "preinstall": "node ./scripts/yarn/check-yarn.js",
        "prepare": "npm-run-all build test",
        "prepublishOnly": "cd ./built",
        "publish": "npm publish --access public",
        "postpublish": "git push origin --all; git push origin --tags",
        "test": "yarn test:clean && yarn test:run",
        "test:clean": "shx rm -rf test/coverage .nyc-output",
        "test:run": "karma start ./conf/karma.config.js --single-run --browsers HeadlessChrome"
    },
    "sideEffects": false,
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "lines": 95,
        "statements": 95,
        "functions": 95,
        "branches": 95,
        "exclude": [
            "**/*.spec.js",
            "**/test/**",
            "node_modules"
        ],
        "reporter": [
            "html",
            "lcov",
            "text-summary"
        ]
    }
}
