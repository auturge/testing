{
    "compilerOptions": {
        "outDir": "./build/.tsc-output",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "baseUrl": "./",
        "paths": {
            "@testing/*": ["./src/*"]
        },
        "types": ["mocha"]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["node_modules", "**/*.d.ts", "temp/**/*", "build/**/*"]
}
