{
    "compilerOptions": {
        "outDir": "./build/.tsc-output",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "declaration": true,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@testing/*": ["./src/*"]
        },
        "types": ["mocha"]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["node_modules", "**/*.d.ts", "temp/**/*", "build/**/*"]
}
